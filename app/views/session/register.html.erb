<h1>Registration Form</h1>

<%= form_tag '/session', method: 'post' do %>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<form name="registerForm" action="/register" method="post">

  <div class="field">
    <p class="control">
      <label for=""></label>
      <input name="name" required type="text" placeholder="Enter Username">
    </p>
  </div>

  <div class="field">
    <p class="control">
      <label for=""></label>
      <input name="email" required type="email" placeholder="Enter Email address">
    </p>
  </div>

  <div class="field">
    <p class="control">
      <label for=""></label>
      <input id="password" name="password" required type="password" placeholder="Enter Password">
    </p>
  </div>

  <div class="field">
    <p class="control">
      <label for=""></label>
      <input id="confirm_password" name="confirm_password" required type="password" placeholder="Confirm Password">
    </p>
  </div>
  <button id="register" name="button">Register</button>

<% end %>
<!-- <script src="app.js"></script> -->
</body>
