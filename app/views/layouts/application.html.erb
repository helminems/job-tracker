<!DOCTYPE html>
<html>
  <head>
    <title>JobTracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="nav">
      <div class="container">
        <div class="nav-left">
          <a href="/"><h1 class="title is-2">Job Tracker</h1></a>
        </div>
        <div class="nav-right">
          <% if logged_in? %>
            <h2>Hello , <span class="current-user"><%= current_user.name %></span> </h2>
            <%= form_tag '/session', method: 'delete' do %>
              <button>Logout</button>
            <% end %>

          <% else %>
            <%= form_tag '/session', method: 'post' do %>
              <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
              <label for="">Email</label>
              <input type="text" name="email">
              <label for="">Password</label>
              <input type="password" name="password">
              <button class="button is-small">Login</button>
            <% end %>
          <% end %>
        </div>
      </div>
    </nav>

    <%= yield %>

  </body>
</html>
